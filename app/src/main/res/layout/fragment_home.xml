<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sweet="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">

    <LinearLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10dp">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/CircularDeterminateProgressBar"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:progress="0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatr"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_wellness_orange"
                    sweet:tint="@color/yellow_900" />

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/muli_semibold"
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/bmi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_semibold"
                    android:text=""
                    android:textColor="@color/exo_black_opacity_60"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_100dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_weight="1"
                android:elevation="@dimen/margin_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/margin_20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/progress_layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_10dp">

                        <ProgressBar
                            style="@style/CircularDeterminateProgressBar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            tools:progress="0" />

                        <TextView
                            android:id="@+id/currentKcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/muli_semibold"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:fontFamily="@font/muli_semibold"
                        android:text="Calories (kcal)"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_16" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_100dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_weight="1"
                android:elevation="@dimen/margin_10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/margin_20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/progress_layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10dp">

                        <ProgressBar
                            style="@style/CircularDeterminateProgressBar"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            tools:progress="0" />

                        <TextView
                            android:id="@+id/currentSteps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/muli_semibold"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin_10dp"
                        android:fontFamily="@font/muli_semibold"
                        android:text="Steps"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_20" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/margin_10dp"
            android:elevation="@dimen/margin_10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/margin_20dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_100dp">
                <ImageView
                    android:id="@+id/heartIcon"
                    android:layout_margin="@dimen/margin_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pulseheart"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_toRightOf="@+id/heartIcon"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin_10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:text="Heart Rate"/>
                    <TextView
                        android:textColor="@color/grey_60"
                        android:textSize="@dimen/text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latest HR :10"
                        android:id="@+id/latestHeart"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/margin_10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/muli_semibold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16"
                        android:text="Heart State"/>
                    <TextView
                        android:textColor="@color/grey_60"
                        android:textSize="@dimen/text_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 BP /sec"
                        android:id="@+id/avarageHeart"/>
                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:fontFamily="@font/muli_semibold"
            android:text="My Weekly Plan"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_18dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5dp"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_100dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:layout_weight="1"
                android:elevation="@dimen/margin_5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/margin_20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/margin_10dp">


                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_semibold"
                            android:text="Calories (kcal)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/weeklyKcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="0"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/margin_18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="/"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/margin_18dp" />

                            <TextView
                                android:id="@+id/myPLanKcal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="0"
                                android:textColor="@color/grey_60"
                                android:textSize="@dimen/text_14" />
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <ProgressBar
                            android:id="@+id/myPlanKcalPro"
                            style="@style/CircularDeterminateProgressBar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            tools:progress="0" />

                        <TextView
                            android:id="@+id/myPlanKcalProText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/muli_semibold"
                            android:text="0%"
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtPlanStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout1"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="Great! You are almost there."
                        android:textColor="@color/grey_60"
                        android:textSize="@dimen/text_10" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_100dp"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_weight="1"
                android:elevation="@dimen/margin_5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/margin_20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/margin_10dp">


                    <LinearLayout
                        android:id="@+id/layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli_semibold"
                            android:text="Distance (km)"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/weeklyKm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="0"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/margin_18dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="/"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/margin_18dp" />

                            <TextView
                                android:id="@+id/myPlanKm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="0"
                                android:textColor="@color/grey_60"
                                android:textSize="@dimen/text_14" />
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <ProgressBar
                            android:id="@+id/myPlanKMPro"
                            style="@style/CircularDeterminateProgressBar"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            tools:progress="0" />

                        <TextView
                            android:id="@+id/myPlanKMProText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/muli_semibold"
                            android:text="0%"
                            android:textColor="@color/black"
                            android:textSize="10dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtDistancePlanStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout3"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="Greate! You just near to you goal"
                        android:textColor="@color/grey_60"
                        android:textSize="@dimen/text_10" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:fontFamily="@font/muli_semibold"
                android:text="My Weekly Goals"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/addGoals"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:background="@drawable/round_border_green"
                android:text="ADD"
                android:textSize="@dimen/text_10" />
        </RelativeLayout>

        <TextView
            android:id="@+id/addGoalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/muli_semibold"
            android:text="Please add your goals here"
            android:textColor="@color/grey_60"
            android:textSize="@dimen/margin_14dp" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/userGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
       >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_100dp"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:elevation="@dimen/margin_5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/margin_20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_10dp">


                        <LinearLayout
                            android:id="@+id/layout7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="Lose weight"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/goalWeight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="00"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/margin_18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="/"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/margin_18dp" />

                                <TextView
                                    android:id="@+id/total_lose_weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="00"
                                    android:textColor="@color/grey_60"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layout8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <ProgressBar
                                android:id="@+id/weightPro"
                                style="@style/CircularDeterminateProgressBar"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                tools:progress="0" />

                            <TextView
                                android:id="@+id/weightProText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/muli_semibold"
                                android:text="0%"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout7"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="Greate! You just near to you goal"
                            android:textColor="@color/grey_60"
                            android:textSize="@dimen/text_10" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_100dp"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:elevation="@dimen/margin_5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/margin_20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_10dp">


                        <LinearLayout
                            android:id="@+id/layout9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="Running"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/currentRunning"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="00"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/margin_18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="/"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/margin_18dp" />

                                <TextView
                                    android:id="@+id/total_running"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="00"
                                    android:textColor="@color/grey_60"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layout10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <ProgressBar
                                android:id="@+id/runningProgress"
                                style="@style/CircularDeterminateProgressBar"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                tools:progress="0" />

                            <TextView
                                android:id="@+id/runningProgressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/muli_semibold"
                                android:text="0%"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout9"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="Greate! You just near to you goal"
                            android:textColor="@color/grey_60"
                            android:textSize="@dimen/text_10" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5dp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_100dp"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:elevation="@dimen/margin_5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/margin_20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_10dp">


                        <LinearLayout
                            android:id="@+id/layout11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="Calories burn"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/goalKcal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="00"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/margin_18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="/"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/margin_18dp" />

                                <TextView
                                    android:id="@+id/total_calories"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="00"
                                    android:textColor="@color/grey_60"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layout12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <ProgressBar
                                android:id="@+id/kcalPro"
                                style="@style/CircularDeterminateProgressBar"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                tools:progress="0" />

                            <TextView
                                android:id="@+id/kcalProText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/muli_semibold"
                                android:text="0%"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout11"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="Greate! You just near to you goal"
                            android:textColor="@color/grey_60"
                            android:textSize="@dimen/text_10" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/margin_100dp"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:elevation="@dimen/margin_5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/margin_20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin_10dp">


                        <LinearLayout
                            android:id="@+id/layout13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/muli_semibold"
                                android:text="Steps"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/goalSteps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="00"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/margin_18dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="/"
                                    android:textColor="@color/primary"
                                    android:textSize="@dimen/margin_18dp" />

                                <TextView
                                    android:id="@+id/total_steps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/muli_semibold"
                                    android:text="00"
                                    android:textColor="@color/grey_60"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layout14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true">

                            <ProgressBar
                                android:id="@+id/stepsPro"
                                style="@style/CircularDeterminateProgressBar"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                tools:progress="0" />

                            <TextView
                                android:id="@+id/stepsProText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/muli_semibold"
                                android:text="0%"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/layout13"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:text="Greate! You just near to you goal"
                            android:textColor="@color/grey_60"
                            android:textSize="@dimen/text_10" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:fontFamily="@font/muli_semibold"
                android:text="Activities Summary"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/seeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:fontFamily="@font/muli_semibold"
                android:text="see all"
                android:textColor="@color/primary"
                android:textSize="@dimen/margin_14dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activitiesSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:clipToPadding="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/noActvity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_40dp"
            android:fontFamily="@font/muli_semibold"
            android:text="Your today's activity will show here"
            android:textColor="@color/grey_60"
            android:textSize="@dimen/margin_14dp" />


    </LinearLayout>
</ScrollView>