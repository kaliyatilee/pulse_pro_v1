<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WeightMonitoring">
    <TextView
        android:id="@+id/tv1"
        android:layout_marginTop="@dimen/margin_50dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Weight"/>
    <TextView
        android:id="@+id/dateRecorded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2023 10:20 Record"
        android:layout_below="@+id/linear1"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/linear1"
      android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_centerHorizontal="true"
            android:textColor="@color/primary"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/margin_80dp"
            android:text="110.2"
            android:id="@+id/weight"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KG"
            android:layout_alignEnd="@id/weight"
            android:layout_below="@id/weight"/>

    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="@dimen/margin_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Weight"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/targetWeight"
                android:text="110.2"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_10dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/recordWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:text="Record Weight" />

</RelativeLayout>