<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgrey"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarpolicy"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:navigationIcon="@drawable/ic_home_back"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/white" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10dp"
        android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/tvFullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:fontFamily="@font/muli_semibold"
        android:gravity="center"
        android:text="Fullname"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18" />

    <TextView
        android:id="@+id/friendPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_semibold"
        android:gravity="center"
        android:text="0 pts"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_20" />

    <Button
        android:id="@+id/unfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_5dp"
        android:backgroundTint="@color/grey_60"
        android:text="unfriend" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@drawable/top_corner"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_80dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_weight="1"
                android:elevation="@dimen/margin_10dp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/margin_20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/steps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/muli_semibold"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/muli_semibold"
                        android:text="Steps"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_80dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_weight="1"
                android:elevation="@dimen/margin_10dp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/margin_20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/muli_semibold"
                        android:text="0.0 km"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/muli_semibold"
                        android:text="Distance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/margin_0dp"
                android:layout_height="@dimen/margin_80dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_weight="1"
                android:elevation="@dimen/margin_10dp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="@dimen/margin_20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/muli_semibold"
                        android:text="0.0 kcal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/muli_semibold"
                        android:text="Calories"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20dp"
            android:fontFamily="@font/muli"
            android:text="Steps graph"
            android:textColor="@color/exo_black_opacity_70"
            android:textSize="@dimen/text_18" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            app:cardCornerRadius="@dimen/margin_20dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/friend_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_200dp"
                android:layout_margin="@dimen/margin_10dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>